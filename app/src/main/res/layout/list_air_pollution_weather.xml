<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/md_cv_air_pollution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/dark_mode2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/co_layout_air_pollution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

        <ProgressBar
            android:id="@+id/pb_circle_diagram_so2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:max="350"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:progressDrawable="@drawable/circle" />

            <TextView
                android:id="@+id/tv_num_in_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="15400"
                android:textSize="30sp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintStart_toStartOf="@id/pb_circle_diagram_so2"
                app:layout_constraintTop_toTopOf="@id/pb_circle_diagram_so2"
                app:layout_constraintBottom_toBottomOf="@id/pb_circle_diagram_so2"
                app:layout_constraintEnd_toEndOf="@id/pb_circle_diagram_so2"/>

        <!--hala-->
            <TextView
                android:id="@+id/tv_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pb_circle_diagram_so2"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Carbon monoxide"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="component"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toEndOf="@id/pb_circle_diagram_so2"
                app:layout_constraintTop_toBottomOf="@id/name_gas" />
            <TextView
                android:id="@+id/tv_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="feeling good"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toEndOf="@id/pb_circle_diagram_so2"
                app:layout_constraintTop_toBottomOf="@id/tv_comp" />
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num temp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toEndOf="@id/pb_circle_diagram_so2"
                app:layout_constraintTop_toBottomOf="@id/tv_good"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</layout>